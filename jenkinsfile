pipeline {
    agent any
    
    stages {
        stage ('Compile Stage'){
            steps {
                withMaven(maven : 'Maven 3.6.3'){
                    sh 'mvn clean compile'
                }            
                
            }
        }
        stage ('Testing Stage'){
            steps {
                withMaven(maven : 'Maven 3.6.3'){
                    sh 'mvn test'
                }
            }  
        }
        stage ('Deploy Artifacts'){
            steps{
                deploy adapters: [tomcat8(credentialsId: 'tomcat_credentials', path: '', url: 'http://54.224.152.148:8090/')], contextPath: null, war: '**/*.war'{
                }
            }
        }
    }
}
